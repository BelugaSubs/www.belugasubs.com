.footer
  width 100%
  margin-top 3rem
  border-top 1px solid rgba(0,0,0,.08)
  margin-bottom 0.8rem
  background linear-gradient(to bottom, rgba(255,255,255,.6), rgba(255,255,255,.8))
  backdrop-filter blur(8px)
  text-align center
  .dark-theme &
    background linear-gradient(to bottom, rgba(20,20,20,.6), rgba(20,20,20,.8))
    border-top 1px solid rgba(255,255,255,.08)

.footer-inner
  max-width 960px
  margin 0 auto
  padding 1.25rem 1rem

.footer-text
  font-size 0.9rem
  line-height 1.0
  color rgba(0,0,0,.7)
  margin-bottom 0.2rem
  .dark-theme &
    color rgba(255,255,255,.7)

.footer-meta
  font-size 0.85rem
  line-height 1.5
  color rgba(0,0,0,.55)
  a
    color inherit
    text-decoration none
    border-bottom 1px dotted rgba(0,0,0,.25)
    transition color .15s ease, border-color .15s ease
    &:hover
      color $light-navbar-active-color
      border-color currentColor
    .dark-theme &
      border-bottom 1px dotted rgba(255,255,255,.25)
      &:hover
        color $dark-navbar-active-color
        border-color currentColor
  .dark-theme &
    color rgba(255,255,255,.55)

@media (max-width: 640px)
  .footer-inner
    padding 1rem
  .footer-text, .footer-meta
    font-size 0.8rem
    line-height 1.4
